{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Protocols Transactions",
  "scopeName": "source.protocols.transactions",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#trace-block"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#integers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.transactions",
          "match": "//.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.transactions",
          "match": "^//\\s*(ARGS|RETURN):",
          "captures": {
            "1": {
              "name": "keyword.control.directive.transactions"
            }
          }
        }
      ]
    },
    "trace-block": {
      "patterns": [
        {
          "begin": "\\b(trace)\\s*(\\{)",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.trace.transactions"
            },
            "2": {
              "name": "punctuation.section.block.begin.transactions"
            }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.block.end.transactions"
            }
          },
          "patterns": [
            {
              "include": "#comments"
            },
            {
              "include": "#function-call"
            },
            {
              "include": "#integers"
            }
          ]
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.transactions"
            }
          },
          "end": "\\)\\s*;",
          "endCaptures": {
            "0": {
              "name": "punctuation.terminator.transactions"
            }
          },
          "patterns": [
            {
              "include": "#integers"
            },
            {
              "name": "punctuation.separator.transactions",
              "match": ","
            }
          ]
        }
      ]
    },
    "integers": {
      "patterns": [
        {
          "name": "constant.numeric.binary.transactions",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.hex.transactions",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.transactions",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    }
  }
}