// ARGS: --wave multi/multi2multi.fst --instances multi2multi:multi2multi
struct multi2multi {
    in start: u1,
    in inp: u64,
    out done: u1,
    out out: u64,
}

fn multi<dut: multi2multi>(in data_in: u64, out data_out: u64) {
    dut.start := 1'b1;
    dut.inp := data_in;
    assert_eq(dut.done, 1'b0);
    
    step();

    dut.start := 1'b0;
    dut.inp := X;

    while !(dut.done == 1'b1){
        step();
    }

    assert_eq(dut.out, data_out);

    fork();
    step();
}