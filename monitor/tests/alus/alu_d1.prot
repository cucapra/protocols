// ARGS: --wave alus/alu_d1.fst --instances alu_d1:ALU 
struct ALU {
  in a: u32,
  in b: u32,
  in op: u2,
  out s: u32,
}

prot add<DUT: ALU>(in a: u32, in b: u32, out s: u32) {
  DUT.a := a;
  DUT.b := b;
  DUT.op := 2'b00;
  step();
  DUT.a := X;
  DUT.b := X;
  DUT.op := X;
  assert_eq(s, DUT.s);
  fork();
  step();
}

