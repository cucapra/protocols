struct Adder {
  in a: u32,
  in b: u32,
  out s: u32,
}

// Adder with 1-cycle delay (i.e. `DUT.s` is only assigned after one cycle)
fn add<DUT: Adder>(in a: u32, in b: u32, out s: u32) {
  DUT.a := a;
  DUT.b := b;
  step();
  DUT.a := X;
  DUT.b := X;
  assert_eq(s, DUT.s);

